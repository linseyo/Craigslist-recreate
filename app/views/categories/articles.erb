<div class="container" align="center">
  <h1>HERE ARE ALL THE ARTICLES</h1>
    <p>
    <HR>
      <% @category_articles.each do |article| %>
        <strong> <%= article.title.upcase %> </strong>
        <br><br>
        Description: <%= article.description %>
        <br><br>
        Price: <%= article.price %>
        <br><br>
        Contact: <%= article.contact %>
        <br>
        <HR>
      <% end %>
    </p>

    <form action= <%= "/categories/#{@category.id}/articles/new" %>  method="get">
      <button type="submit">Create A New Article</button>
    </form>



    <HR>
    <a href="/">Take Me Home</a>
</div>
