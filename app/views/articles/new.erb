<div class="container">
  <h1>Craigslist Junior</h1>

  <h2>New Article</h2>
  
  <form action="/articles/new" method="post">
    <div class="title">
      <label for="title">Title:</label>
      <input type="text" id="title" name="new_title">
    </div>
    <div class="price">
      <label for="price">Price:</label>
      <input type="integer" id="price" name="new_price">
    </div>
    <div class="email">
      <label for="email">Email:</label>
      <input type="string" id="email" name="new_email">
    </div>
    <div class="category">
      <label for="category">Category:</label>
      <input type="string" id="category" name="new_category">
    </div>
    <div class="description">
      <label for="description">Description:</label>
      <textarea id="description" name="new_description"></textarea>
    </div>
    <div class="button">
      <button type="submit">Save your article!</button>
    </div>
  </form>
</div>