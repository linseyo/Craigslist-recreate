<h1>Create New Article</h1>


<form action='/articles' method='post'>
  <label for='title'>Title:</label>
  <input type='text', name ='article[title]'><br>
  <label for='price'>Price:</label>
  <input type='text', name ='article[price]'><br>
  <label for='description'>Description:</label>
  <input type='text', name ='article[description]'><br>
  <label for='email'>Email:</label>
  <input type='text', name ='article[email]'><br><br>
  <label for='categories'>Category:</label>
  <select name="category">
    <% @categories.each do |category| %>
      <option value='<%=category.name.downcase %>'><%=category.name%></option>
    <% end %>
  </select>

  <input type='submit' />
</form>
